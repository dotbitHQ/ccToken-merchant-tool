{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "esnext",
    "outDir": "dist",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src"]
}
